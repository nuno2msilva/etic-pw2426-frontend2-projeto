# ============================================================
# Sushi Dash — Server Environment Variables
# ============================================================
# Copy to .env and fill in your MariaDB credentials.
# ============================================================

# MariaDB connection
# Use 'db' when running via docker-compose, 'localhost' when MariaDB is local
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=sushi
DB_NAME=sushi_dash

# JWT secret — change this to a random string in production!
JWT_SECRET=sushi-dash-dev-secret-change-me

# Server
PORT=3001
