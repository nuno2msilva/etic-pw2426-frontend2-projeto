{
  "name": "sushi-dash-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "postinstall": "prisma generate",
    "start": "node dist/index.js",
    "db:push": "npx prisma db push",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "npx prisma db push --force-reset && tsx src/db/seed.ts",
    "db:generate": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^7.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^7.4.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
